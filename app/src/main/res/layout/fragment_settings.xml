<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <ImageButton
        android:id="@+id/btnChangeEnd"
        android:layout_width="@dimen/clickable"
        android:layout_height="@dimen/clickable"
        android:layout_below="@+id/tvTimeEnd"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/textView3"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_access_time_24"
        android:text="@string/save_time" />

    <Switch
        android:id="@+id/swNotifications"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clickable"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/toggle_margin_top"
        android:ellipsize="none"
        android:fontFamily="@font/mouse_memoirs"
        android:scaleX="1"
        android:scaleY="1"
        android:text="@string/notification_toggle"
        android:textColor="#808080"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDoNotDisturb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swNotifications"
        android:layout_marginTop="@dimen/label_margins"
        android:layout_marginEnd="@dimen/label_margins"
        android:layout_marginBottom="@dimen/label_margins"
        android:fontFamily="@font/mouse_memoirs"
        android:text="@string/do_not_disturb"
        android:textColor="#808080"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTimeStart"
        android:layout_width="@dimen/edit_time_width"
        android:layout_height="@dimen/clickable"
        android:layout_below="@+id/tvDoNotDisturb"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/mouse_memoirs"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:text="25"></TextView>

    <TextView
        android:id="@+id/tvTimeEnd"
        android:layout_width="@dimen/edit_time_width"
        android:layout_height="@dimen/clickable"
        android:layout_below="@+id/tvDoNotDisturb"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/mouse_memoirs"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        tools:text="26"></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeStart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/label_margins"
        android:layout_marginTop="@dimen/label_margins"
        android:layout_marginEnd="@dimen/label_margins"
        android:layout_marginBottom="@dimen/label_margins"
        android:fontFamily="@font/mouse_memoirs"
        android:text="@string/start_time"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeEnd"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/label_margins"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/label_margins"
        android:fontFamily="@font/mouse_memoirs"
        android:text="@string/end_time"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnChangeStart"
        android:layout_width="@dimen/clickable"
        android:layout_height="@dimen/clickable"
        android:layout_below="@+id/tvTimeStart"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_access_time_24"
        android:text="@string/save_time" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDoNotDisturb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/clear" />
</RelativeLayout>