<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <Switch
        android:id="@+id/swNotifications"
        android:layout_width="match_parent"
        android:layout_height="@dimen/clickable"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/toggle_margin_top"
        android:ellipsize="none"
        android:fontFamily="@font/mouse_memoirs"
        android:scaleX="1"
        android:scaleY="1"
        android:text="@string/notification_toggle"
        android:textColor="#808080"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDoNotDisturb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swNotifications"
        android:layout_marginTop="@dimen/label_margins"
        android:layout_marginEnd="@dimen/label_margins"
        android:layout_marginBottom="@dimen/label_margins"
        android:fontFamily="@font/mouse_memoirs"
        android:text="@string/do_not_disturb"
        android:textColor="#808080"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etTimeStart"
        android:layout_width="@dimen/edit_time_width"
        android:layout_height="@dimen/clickable"
        android:layout_below="@+id/tvDoNotDisturb"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"></EditText>

    <EditText
        android:id="@+id/etTimeEnd"
        android:layout_width="@dimen/edit_time_width"
        android:layout_height="@dimen/clickable"
        android:layout_below="@+id/tvDoNotDisturb"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"></EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTimeStart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/label_margins"
        android:layout_marginTop="@dimen/label_margins"
        android:layout_marginEnd="@dimen/label_margins"
        android:layout_marginBottom="@dimen/label_margins"
        android:fontFamily="@font/mouse_memoirs"
        android:text="@string/start_time"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTimeEnd"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/label_margins"
        android:layout_marginTop="@dimen/label_margins"
        android:layout_marginEnd="@dimen/label_margins"
        android:layout_marginBottom="@dimen/label_margins"
        android:fontFamily="@font/mouse_memoirs"
        android:text="@string/end_time"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnChangeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTimeEnd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/save_margin_top"
        android:text="@string/save_time" />
</RelativeLayout>